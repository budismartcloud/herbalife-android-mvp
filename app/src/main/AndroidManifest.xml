<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.herbalifemvp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".presentation.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".presentation.main.MainActivity"></activity>
        <activity android:name=".presentation.catalog.CatalogActivity"></activity>
        <activity android:name=".presentation.detailcatalog.DetailCatalogActivity"></activity>
        <activity android:name=".presentation.disease.DiseaseActivity"></activity>
        <activity android:name=".presentation.detaildisease.DetailDiseaseActivity"></activity>
        <activity android:name=".presentation.diseasesearch.DiseaseSearchActivity"></activity>

    </application>

</manifest>